  == render 'layouts/messages'
  
  .left-pannel
    .refine-search
      h3 Refine Your Agent Search
      form
        = search_form_for @q do |f|
          = f.search_field :name_cont, class: "input-field"
        / input.input-field name="refinesearch" type="text"
          = f.submit "hello"
        / input.search-button name="submit" type="submit" value=""
      .clear
