  .content-pannel
    = paginate @agents
    .sorting
      span Sort by: &nbsp;
      select name="sortfield" 
        option value="1"  Available to Contact
        option value="2"  Agent Name: A to Z
        option value="3"  Agent Name: Z to A
        option value="4"  Number of Reviews
        option value="5"  Percent Recommended
    .plq-listing
      - @agents.each do |user|
        = render 'agent_item', user: user
    = paginate @agents
           
    
