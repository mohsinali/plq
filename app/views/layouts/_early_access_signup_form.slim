form action="/mailchimp/subscribe_to_mailchimp" method="post" name="earlyaccessfrm" data-remote="true"
  .field-div
    .label Name
    .field
      input.inputfield.username name="username" type="text" value=""
    .clear
  .field-div
    .label Email
    .field
      input.inputfield.user_email name="email" type="text" value=""
    .clear
  .field-div
    .label Location
    .field
      input.inputfield.user_location name="location" type="text" value=""
      input.inputfield name="list" type="hidden" value="early_access"
    .clear
  .align-right.padd-rgt-10
    .user_loader style="display:none;"
        = image_tag "loading.gif"
    input.submit-button.btn_user_signup name="submit" type="submit" value=("Sign Up")